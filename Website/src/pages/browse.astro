---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { fetchRecipes } from '../dataFetch';
import BaseHead from '../components/BaseHead.astro';
import "../styles/browse.css"
---


<html lang="en">
<BaseHead/>
<body>
  <Header/>
  <main class="browse-main">
    <h1>What You Want?</h1>
    
    <div class="create-browse-container">
      
      <form id="createQuery">

        <!-- IDEA: make theses fields not required, 
          and the js file will check each of these fields,
          if a field is not null, it will add an additional
          where clause on that field to the query
         -->

        <label for="title">Title (exact)</label>
        <input type="text" id="title"/>

        <label for="author">Author (exact)</label>
        <input type="text" id="author"/>

        <label for="ingredients">Ingredients (comma-separated)</label>
        <input type="text" id="ingredients"/>

        <label for="prepTime">Prep Time (at most)</label>
        <input type="text" id="prepTime"/>

        <label for="cookTime">Cook Time (at most)</label>
        <input type="text" id="cookTime"/>

        <label for="servings">Servings (at least)</label>
        <input type="text" id="servings">

        <label for="tags">Tags (comma-separated)</label>
        <input type="text" id="tags"/>

        <button type="submit">Search!</button>

        </section>
        <script type="module" src="/scripts/browse.js"></script>
      </form>
      
    </div>

  </main>
  <Footer/>
  
</body>
</html>