---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BaseHead from '../components/BaseHead.astro';
import "../styles/createPost.css"
---

<html lang="en">
<BaseHead />
<body>
  <Header />
  <main class="create-post-main">
    <h1>Create a Recipe Post</h1>
    <div class="create-post-container">
      <form id="createPostForm">
        <label for="title">Title</label>
        <input type="text" id="title" required />

        <label for="author">Author</label>
        <input type="text" id="author" required />

        <label for="image">Image URL</label>
        <input type="text" id="image" required />

        <label for="instructions">Instructions</label>
        <textarea id="instructions" required></textarea>

        <label for="ingredients">Ingredients (comma-separated)</label>
        <input type="text" id="ingredients" required />

        <label for="prepTime">Prep Time</label>
        <input type="text" id="prepTime" required />

        <label for="cookTime">Cook Time</label>
        <input type="text" id="cookTime" required />

        <label for="servings">Servings</label>
        <input type="text" id="servings" required />

        <label for="tags">Tags (comma-separated)</label>
        <input type="text" id="tags" required />

        <label for="subtitle">Subtitle</label>
        <input type="text" id="subtitle" required />

        <button type="submit">Create Post</button>
      </form>
      <p class="error" id="createPostErrorMessage"></p>
      <p class="success" id="createPostSuccessMessage"></p>
    </div>
  </main>
  <Footer />
  <script type="module" src="../scripts/createPost.js"></script>
</body>
</html>
